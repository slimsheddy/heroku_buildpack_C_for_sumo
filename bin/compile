#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

cd $BUILD_DIR

#configure xerces-C first
curl wget http://mirror.ventraip.net.au/apache//xerces/c/3/sources/xerces-c-3.1.1.tar.gz > xerces-c-3.1.1.tar.gz
tar xzvf xerces-c-3.1.1.tar.gz
echo ${HOME}
export XERCESCROOT=`pwd`/xerces-c-3.1.1
cd $XERCESCROOT/src/xercesc
echo "which autoconf"
echo `pwd`
autoconf
echo "autoconf completed"
./runConfigure -plinux -cgcc -xg++ -minmem -nsocket -tnative -rpthread -P$HOME
echo "runconfigure completed"
make
make install

cd $HOME

# configure
if [ -f configure ]; then
  echo "-----> Configuring"
  ./configure --with-xerces=$HOME 2>&1 | indent
fi

# make
echo "-----> Compiling with Make"
make 2>&1 | indent
